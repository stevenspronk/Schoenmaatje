<mvc:View controllerName="Schoenmaatje.controller.Sender" displayBlock="true" xmlns:l="sap.ui.layout" xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
	<App>
		<pages>
			<Page navButtonPress="onNavBack" showNavButton="true" title="Jij">
				<headerContent></headerContent>
				<content>
					<Button id="timeLineId" press="onShowTimeline" text="Time Line"/>		
					<Toolbar>
						<ToolbarSpacer/>
						<SegmentedButton selectedButton="sender">
							<Button id="sender" press="setHomeCountry" text="{i18n>SendingCountry}"/>

							<Button press="setForeignCountry" text="{i18n>DestinationCountry}"/>
						</SegmentedButton>
						<ToolbarSpacer/>
					</Toolbar>
					<l:Grid class="sapUiSmallMarginTop" defaultSpan="L6 M8 S12" hSpacing="2">
						<l:content>
							<VBox>
								<Label text="{i18n>Voornaam}"/>
								<Input value="{Voornaam}"/>
							</VBox>
							<VBox class="formImage">
								<Image src="data:image/png;base64,{FotoUser}" width="60%"></Image>
								<Button press="takePhotoUser" text="Foto van mij!" width="100%"></Button>
							</VBox>
							<VBox>
								<sap.ui.layout.form:SimpleForm editable="false" id="__form0" layout="ResponsiveGridLayout" xmlns:sap.ui.layout.form="sap.ui.layout.form">
									<sap.ui.layout.form:content>
										<Title text="{i18n>Familie}"></Title>
										<Label text="{i18n>Vader}"/>
										<Input value="{Vader}"/>
										<Text text="{i18n>Moeder}"></Text>
										<Input value="{Moeder}"/>
										<Text text="{i18n>BroersAantal}"></Text>
										<Input value="{BroersAantal}"/>
										<Text text="{i18n>ZustersAantal}"></Text>
										<Input value="{ZussenAantal}"/>
									</sap.ui.layout.form:content>
								</sap.ui.layout.form:SimpleForm>
							</VBox>
							<Image src="data:image/png;base64,{FotoFamilie}" width="60%"></Image>
							<VBox>
								<Input value="{i18n>Klas}"/>
							</VBox>
							<Image src="data:image/png;base64,{FotoKlas}" width="60%"></Image>
							<Label text="{i18n>FavSport}"/>
							<Input value="{receiverModel>/FavSport}"/>
							<Label text="{i18n>FavMuziek}"/>
							<Input value="{receiverModel>/FavMuziek}"/>
							<Label text="{i18n>FavHobby}"/>
							<Input value="{receiverModel>/FavHobby}"/>
							<Label text="{i18n>FavKleur}"/>
							<Input value="{receiverModel>/FavKleur}"/>
							<Label text="{i18n>Idool}"/>
							<Input value="{receiverModel>/Idool}"/>
							<Label text="{i18n>Beroep}"/>
							<Input value="{receiverModel>/Beroep}"/>
							<Label text="{i18n>Wens}"/>
							<TextArea rows="3" value="{receiverModel>/Wens}"/>
						</l:content>
					</l:Grid>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>