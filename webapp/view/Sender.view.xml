								<Text class="inputForm" text="Dit zou ik later willen worden:"></Text>
								<Input class="nameTitle" value="{Idool}"/>
								<Text class="inputForm" text="Mijn wens voor jou is:"></Text>
								<Input class="nameTitle" value="{Beroep}"/>
							</VBox>
							<Image src="data:image/png;base64,{FotoKlas}" width="100%"></Image>
							<Button press="takePhotoClass" text="Maak een foto van je klas!" width="100%"></Button>
						</l:content>
