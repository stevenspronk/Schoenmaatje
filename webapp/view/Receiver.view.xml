<mvc:View controllerName="Schoenmaatje.controller.Receiver" displayBlock="true" xmlns:mvc="sap.ui.core.mvc" xmlns:sap.ui.core="sap.ui.core"
	xmlns:sap.ui.layout.form="sap.ui.layout.form" xmlns="sap.m">
	<App>
		<pages>
			<Page title="{i18n&gt;PersonPageTitle}">
				<Button press="takePhoto" text="Foto!"/>
				<sap.ui.layout.form:SimpleForm editable="false" id="__form0" layout="ResponsiveGridLayout" xmlns:sap.ui.layout.form="sap.ui.layout.form">
					<sap.ui.layout.form:content>
						<sap.ui.core:Title id="__title0" text="Title" xmlns:sap.ui.core="sap.ui.core"/>
							<Label text="{i18n>Voornaam}"/>
							<Input value="{receiverModel>/Voornaam}"/>
							<Label text="{i18n>Vader}"/>
							<Input value="{receiverModel>/Vader}" />
							<Label text="{i18n>Moeder}"/>
							<Input value="{receiverModel>/Moeder}" />
							<Label text="{i18n>BroersAantal}"/>
							<Input value="{receiverModel>/BroersAantal}" />
							<Label text="{i18n>ZustersAantal}"/>
							<Input value="{receiverModel>/ZustersAantal}" />
							<Label text="{i18n>FavSport}"/>
							<Input value="{receiverModel>/FavSport}" />
							<Label text="{i18n>FavMuziek}"/>
							<Input value="{receiverModel>/FavMuziek}" />
							<Label text="{i18n>FavHobby}"/>
							<Input value="{receiverModel>/FavHobby}" />
							<Label text="{i18n>FavKleur}"/>
							<Input value="{receiverModel>/FavKleur}"/>
							<Label text="{i18n>Idool}"/>
							<Input value="{receiverModel>/Idool}" />
							<Label text="{i18n>Beroep}"/>
							<Input value="{receiverModel>/Beroep}" />
							<Label text="{i18n>Wens}"/>
							<TextArea value="{receiverModel>/Wens}" rows="3"/>
					</sap.ui.layout.form:content>
				</sap.ui.layout.form:SimpleForm>
				<content></content>
			</Page>
		</pages>
	</App>
</mvc:View>