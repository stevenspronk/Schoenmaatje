<mvc:View controllerName="Schoenmaatje.controller.Receiver" displayBlock="true" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m">
	<App>
		<pages>
			<Page title="{i18n>PersonPageTitle}">
				<headerContent></headerContent>
				<content>
					<Button press="takePhoto" text="Foto!"/>
					<List growing="true" growingScrollToLoad="true" items="{/schoenendoosSet}" mode="SingleSelectMaster"
						noDataText="Geen schoenendoos beschikbaar">
						<items>
							<CustomListItem>
								<Title text="{Voornaam}"></Title>
								<Image scr="{Foto}"></Image>
							</CustomListItem>
						</items>
					</List>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>