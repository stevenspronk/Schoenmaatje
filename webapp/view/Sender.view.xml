<mvc:View controllerName="Schoenmaatje.controller.Sender" displayBlock="true" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m">
	<App>
		<pages>
			<Page title="Jij">
				<headerContent></headerContent>
				<content>
					<Button press="takePhotoUser" text="Foto van mij!"/>
					<Button press="takePhotoFamily" text="Foto van mijn familie!"/>
					<Button press="takePhotoClass" text="Foto van mijn familie!"/>
					<sap.ui.layout.form:SimpleForm editable="false" id="__form0" layout="ResponsiveGridLayout" xmlns:sap.ui.layout.form="sap.ui.layout.form">
						<sap.ui.layout.form:content>
							<sap.ui.core:Title id="__title0" text="Title" xmlns:sap.ui.core="sap.ui.core"/>
								<VBox>
							<Label text="{i18n>Voornaam}"/>
							<Input value="{Voornaam}"/>
							<Label text="{i18n>Vader}"/>
							<Input value="{Vader}" />
							<Label text="{i18n>Moeder}"/>
							<Input value="{Moeder}" />
							<Label text="{i18n>BroersAantal}"/>
							<Input value="{BroersAantal}" />
							<Label text="{i18n>ZustersAantal}"/>
							<Input value="{ZustersAantal}" />
							<Label text="{i18n>FavSport}"/>
							<Input value="{FavSport}" />
							<Label text="{i18n>FavMuziek}"/>
							<Input value="{FavMuziek}" />
							<Label text="{i18n>FavHobby}"/>
							<Input value="{FavHobby}" />
							<Label text="{i18n>FavKleur}"/>
							<Input value="{FavKleur}"/>
							<Label text="{i18n>Idool}"/>
							<Input value="{Idool}" />
							<Label text="{i18n>Beroep}"/>
							<Input value="{Beroep}" />
							<Label text="{i18n>Wens}"/>
							<Input value="{Wens}"/>
								<HBox>
							<Image src="data:image/png;base64,{FotoUser}"/>
							<Image src="data:image/png;base64,{FotoFamilie}"/>
							<Image src="data:image/png;base64,{FotoKlas}"/>
								</HBox>
								</VBox>
						</sap.ui.layout.form:content>
					</sap.ui.layout.form:SimpleForm>
						<Button press="updateData" text="Save"/>
							
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>