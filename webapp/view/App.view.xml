<mvc:View controllerName="Schoenmaatje.controller.App" displayBlock="true" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m">
	<App>
		<pages>
			<Page title="{i18n>homePageTitle}">
				<headerContent></headerContent>
				<content>
					<Text
						text="Lorem ipsum"/>
						<Button text ="Scan!" press="scanBarcode"/>
						<Button text ="Foto!" press="takePhoto"/>
							
						<List 
						mode="SingleSelectMaster" 
	                	noDataText="Geen schoenendoos beschikbaar" 
	                growing="true" 
	                growingScrollToLoad="true" 
	                items="{/schoenendoosSet}">
							<items>
								<StandardListItem title="{Voornaam}">
									
								</StandardListItem>
							</items>
						</List>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>